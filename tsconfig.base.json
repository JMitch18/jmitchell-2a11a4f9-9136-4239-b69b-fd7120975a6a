{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "strict": true,
    "skipLibCheck": true,

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "importHelpers": true,
    "isolatedModules": true,

    "lib": ["es2022", "dom"],

    "customConditions": ["@org/source"]
  }
}
